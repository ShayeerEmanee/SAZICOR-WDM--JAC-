      <text><![CDATA[
select
	"users"."user_id" "UserID"
	,"users"."client_id" "ClientID"
	,"clients"."client_name" "ClientName"
	,"users"."user_name" "UserName"
	,"users"."user_email" "UserEmail"
	,"users"."user_password" "UserPassword"
